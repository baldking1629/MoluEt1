@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Yemleme Öğün Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Yemleme Öğün Ekle</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    <!-- jQuery -->
    @* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
    <style>
        .page-header {
            background-color: #343a40; /* Header background color */
            color: #fff; /* Text color */
            padding: 20px; /* Padding inside the header */
            margin-bottom: 20px; /* Bottom margin */
            margin-top: 40px; /* Margin at the top to push it down */
            text-align: center; /* Center align text */
        }

            .page-header h1 {
                font-size: 1.75rem; /* Font size for the title */
                margin: 0; /* Remove margin */
            }

        .card-title {
            font-size: 1.75rem; /* Increased font size for card title */
        }

        .btn-primary {
            font-size: 1.25rem; /* Increased font size for buttons */
        }

        .title-box {
            border: 2px solid #343a40; /* Border color */
            padding: 10px 20px; /* Padding inside the box */
            margin-bottom: 20px; /* Bottom margin */
            text-align: center; /* Center align text */
        }

        .form-control, .btn {
            border-radius: 0.25rem; /* Border radius for form controls and buttons */
        }

        .form-group {
            margin-bottom: 1rem; /* Space below form groups */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Page Header -->
        <div class="page-header title-box">
            <h1 class="m-0">Yemleme Öğün Ekle</h1>
        </div>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Öğün Bilgileri</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="YemlemeOgunEkle" asp-controller="YemlemeOgun" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="aciklama">Açıklama</label>
                                <input type="text" class="form-control" id="aciklama" name="ACIKLAMA" placeholder="Açıklama" />
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer text-right">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Öğün Ekle</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div><!-- /.wrapper -->
</body>
</html>
