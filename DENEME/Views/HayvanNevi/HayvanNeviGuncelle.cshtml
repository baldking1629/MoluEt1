@{
    ViewData["Title"] = "HayvanNeviGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MoluEt.Models.HayvanNevi
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hayvan Nevi Güncelle</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
    <style>
        .page-header {
            background-color: #343a40; /* Header background color */
            color: #fff; /* Text color */
            padding: 20px; /* Padding inside the header */
            margin-bottom: 20px; /* Bottom margin */
            margin-top: 40px; /* Margin at the top to push it down */
        }

            .page-header h1 {
                font-size: 1.75rem; /* Font size for the title */
                margin: 0; /* Remove margin */
            }

        .card-title {
            font-size: 1.75rem; /* Increased font size for card title */
        }

        .form-control {
            font-size: 1rem; /* Font size for inputs */
        }

        .btn-primary, .btn-danger {
            font-size: 1.25rem; /* Increased font size for buttons */
        }

        .button-container {
            display: flex;
            gap: 10px; /* Spacing between buttons */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Page Header -->
        <div class="page-header title-box">
            <h1 class="m-0">Hayvan Nevi Güncelle</h1>
        </div>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hayvan Nevi Bilgileri</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="HayvanNeviGuncelle" asp-controller="HayvanNevi" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="neviNo">Nevi No</label>
                                <input type="text" class="form-control" id="neviNo" name="NEVI_NO" value="@Model.NEVI_NO" readonly>
                            </div>
                            <div class="form-group">
                                <label for="neviAdi">Nevi Adı</label>
                                <input type="text" class="form-control" id="neviAdi" name="NEVI_ADI" value="@Model.NEVI_ADI">
                            </div>
                            <div class="form-group">
                                <label for="aciklama">Açıklama</label>
                                <input type="text" class="form-control" id="aciklama" name="ACIKLAMA" value="@Model.ACIKLAMA">
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="button-container">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Güncelle</button>
                                <button type="button" class="btn btn-danger" onclick="confirmDelete();"><i class="fas fa-trash-alt"></i> Sil</button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.wrapper -->

    <script>
        function confirmDelete() {
            if (confirm('Bu kaydı silmek istediğinize emin misiniz?')) {
                var form = document.createElement('form');
                form.method = 'post';
                form.action = '@Url.Action("HayvanNeviSil", "HayvanNevi")';
                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = '@Model.NEVI_NO';
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>
