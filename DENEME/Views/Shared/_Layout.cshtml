<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DENEME</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/lib/AdminLTE-3.2.0/dist/css/adminlte.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DENEME.styles.css" asp-append-version="true" />
    <style>
        /* Logo ve başlık arasındaki boşluğu ayarlamak için */
        .brand-link {
            display: flex;
            align-items: center;
            padding: 0 10px; /* Logo ve başlık etrafında boşluk bırakır */
            overflow: hidden; /* İçeriğin taşmasını önler */
        }

        .brand-image {
            max-width: 50px; /* Resmin genişliği */
            height: auto; /* Yüksekliği otomatik ayarla */
            margin-right: 10px; /* Resim ile metin arasına boşluk ekler */
        }

        .brand-text {
            font-size: 1.25rem; /* Başlık metninin font boyutu */
            white-space: nowrap; /* Metnin satır kırılmasını önler */
            overflow: hidden; /* Taşan metni gizler */
            text-overflow: ellipsis; /* Taşan metin için üç nokta kullanır */
        }

        /* Yan menü kapalıyken içerik hizalamasını düzenle */
        .sidebar-collapse .brand-link {
            justify-content: center; /* Logo ve başlığı merkezler */
        }

        .sidebar-collapse .content-wrapper {
            margin-left: 0; /* İçeriği sola hizalar */
        }

        .sidebar-collapse .main-sidebar {
            width: 80px; /* Yan menünün genişliğini ayarlar */
        }

        .brand-link {
            padding: 10px 0; /* Yukarı ve aşağıdan 10px boşluk */
        }

    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search" />
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="~/Home/Index" class="brand-link" style="padding: 10px 0;">
                <img src="~/img/logo.png" alt="Molu Et Logo" class="brand-image img-circle elevation-3" style="opacity: .8;">
                <span class="brand-text font-weight-light">Molu Et</span>
            </a>


            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>
                                    Parametreler ve Tanımlar
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="~/BesiGrupTanım/BesiGrupListesi" class="nav-link">
                                        <p>Besi Grup Tanımları</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/IrkTanım/IrkListesi" class="nav-link">
                                        <p>Irk Tanımları</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/HayvanNevi/HayvanNeviList" class="nav-link">
                                        <p>Hayvan Nevi </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Asi/AsiList" class="nav-link">
                                        <p>Aşı </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Ciftlik/CiftlikList" class="nav-link">
                                        <p>Çiftlik Tanım </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Veteriner/VeterinerList" class="nav-link">
                                        <p>Veteriner Tanım </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/YemlemeOgun/YemlemeOgunList" class="nav-link">
                                        <p>Yemleme Öğün Tanım </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Rasyon/RasyonList" class="nav-link">
                                        <p>Rasyon Tanım </p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!--
            -->
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- Your page content here -->
                    @RenderBody()
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Footer -->
        <footer class="main-footer d-flex justify-content-center">
            <div>
                <strong><a href="http://www.sahinyazilim.com.tr/">Şahin Bilgisayar Yazılım ve Danışmanlık Hiz. San. Tic. AŞ.</a>.</strong> © Tüm hakları saklıdır | 2024
            </div>
        </footer>
        <!-- /.footer -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/AdminLTE-3.2.0/dist/js/adminlte.min.js" asp-append-version="true"></script>
    <!-- Your custom scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
