@model MoluEt.Models.IrkTanım
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Irk Tanımı Güncelle</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    <!-- jQuery -->
@*     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
 *@    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
    <style>
        .page-header {
            background-color: #343a40; /* Header background color */
            color: #fff; /* Text color */
            padding: 20px; /* Padding inside the header */
            margin-bottom: 20px; /* Bottom margin */
            margin-top: 40px; /* Margin at the top to push it down */
            text-align: center; /* Center align text */
        }

            .page-header h1 {
                font-size: 1.75rem; /* Font size for the title */
                margin: 0; /* Remove margin */
            }

        .card-title {
            font-size: 1.75rem; /* Increased font size for card title */
        }

        .btn-primary {
            font-size: 1.25rem; /* Increased font size for buttons */
        }

        .title-box {
            border: 2px solid #343a40; /* Border color */
            padding: 10px 20px; /* Padding inside the box */
            margin-bottom: 20px; /* Bottom margin */
            text-align: center; /* Center align text */
            color: #fff; /* Text color */
            background-color: #343a40; /* Background color */
        }

        .button-container {
            display: flex;
            justify-content: flex-start;
            gap: 10px;
            margin-top: 20px; /* Spacing above the buttons */
        }

        .form-control, .btn {
            border-radius: 0.25rem; /* Border radius for form controls and buttons */
        }

        .form-group {
            margin-bottom: 1rem; /* Space below form groups */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Page Header -->
        <div class="page-header title-box">
            <h1 class="m-0"><i class="fas fa-edit"></i> Irk Tanımı Güncelle</h1>
        </div>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Irk Bilgileri</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="IrkTanımGuncelle" asp-controller="IrkTanım" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="irkNo">Irk No</label>
                                <input type="text" class="form-control" id="irkNo" name="IRK_NO" value="@Model.IRK_NO" readonly>
                            </div>
                            <div class="form-group">
                                <label for="irkAdi">Irk Adı</label>
                                <input type="text" class="form-control" id="irkAdi" name="IRK_ADI" value="@Model.IRK_ADI">
                            </div>
                            <div class="form-group">
                                <label for="ulkeAdi">Ülke Adı</label>
                                <input type="text" class="form-control" id="ulkeAdi" name="ULKE_ADI" value="@Model.ULKE_ADI">
                            </div>
                            <div class="form-group">
                                <label for="aciklama">Açıklama</label>
                                <textarea class="form-control" id="aciklama" name="ACIKLAMA">@Model.ACIKLAMA</textarea>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="button-container">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Güncelle</button>
                                <button type="button" class="btn btn-danger" onclick="confirmDelete();"><i class="fas fa-trash-alt"></i> Sil</button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.wrapper -->
    <script>
        function confirmDelete() {
            if (confirm('Bu kaydı silmek istediğinize emin misiniz?')) {
                var form = document.createElement('form');
                form.method = 'post';
                form.action = '@Url.Action("IrkTanımSil", "IrkTanım")';
                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = '@Model.IRK_NO';
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>
