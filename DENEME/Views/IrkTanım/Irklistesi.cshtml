
@{
    ViewData["Title"] = "Irklistesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Irk Tanımları</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap4.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    <!-- jQuery -->
    @* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap4.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
    <style>
        .page-header {
            background-color: #343a40; /* Header background color */
            color: #fff; /* Text color */
            padding: 20px; /* Padding inside the header */
            margin-bottom: 20px; /* Bottom margin */
            margin-top: 40px; /* Margin at the top to push it down */
        }

            .page-header h1 {
                font-size: 1.75rem; /* Font size for the title */
                margin: 0; /* Remove margin */
            }

        .btn-primary {
            font-size: 1rem; /* Font size for buttons */
        }

        .btn-search {
            background-color: #007bff; /* Button background color */
            color: white;
            border: none;
            border-radius: 0.25rem;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-search:hover {
                background-color: #0056b3; /* Button background color on hover */
                color: white;
            }

        .form-control-search {
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
            padding: 0.5rem 0.75rem;
            font-size: 1rem;
        }

        .form-inline .form-control-search {
            margin-right: 10px; /* Right margin for spacing between search input and button */
        }

        .form-inline .btn-search {
            margin-right: 10px; /* Right margin for spacing between search button and new item button */
        }

        .card-tools .btn-success {
            margin-left: auto; /* Push button to the right */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="m-0">Irk Tanım Listesi</h1>
        </div>
        <section class="content">
            <div class="container-fluid">
                <div class="card">

                    <!-- /.card-header -->
                    <div class="card-body">
                        <!-- Arama Formu -->
                        <form id="searchForm" method="get" action="~/IrkTanım/IrkListesi" class="form-inline mb-4">
                            <div class="input-group input-group-md">
                                <input type="text" class="form-control form-control-search" name="searchTerm" placeholder="Irk Adı ile ara..." aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-search" type="submit">
                                        <i class="fas fa-search"></i> Ara
                                    </button>
                                </div>
                            </div>
                            <div class="card-tools">
                                <a href="~/IrkTanım/IrkTanımEkle" class="btn btn-success">Yeni Irk Tanım</a>
                            </div>
                        </form>

                        <div class="table-responsive mt-3">
                            <table id="irkTanımTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Irk No</th>
                                        <th>Irk Adı</th>
                                        <th>Ülke Adı</th>
                                        <th>Açıklama</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.IRK_NO</td>
                                            <td><a href="~/IrkTanım/IrkTanımGuncelle/@item.IRK_NO" class="text-primary">@item.IRK_ADI</a></td>
                                            <td>@item.ULKE_ADI</td>
                                            <td>@item.ACIKLAMA</td>
                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <!-- ./wrapper -->

        <script>
            $(document).ready(function () {
                $('#irkTanımTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json"
                    },
                    "autoWidth": false, // Tabloyu tam genişlikte yapar
                    "responsive": true // Tabloyu responsive yapar
                });
            });
        </script>
    </div>
</body>
</html>

