@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Rasyon Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    <!-- jQuery -->
@*     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
 *@    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>

    <style>
        .page-header {
            background-color: #343a40; /* Header background color */
            color: #fff; /* Text color */
            padding: 20px; /* Padding inside the header */
            margin-bottom: 20px; /* Bottom margin */
            margin-top: 40px; /* Margin at the top to push it down */
        }

            .page-header h1 {
                font-size: 1.75rem; /* Font size for the title */
                margin: 0; /* Remove margin */
            }

        .card {
            border-radius: 0.25rem; /* Card border radius */
        }

        .card-header {
            background-color: #343a40; /* Card header background color */
            color: #fff; /* Card header text color */
        }

        .card-title {
            font-size: 1.75rem; /* Font size for card title */
        }

        .btn-primary {
            font-size: 1.25rem; /* Font size for buttons */
            border-radius: 0.25rem; /* Button border radius */
        }

        .card-body {
            padding: 20px; /* Padding inside the card body */
        }

        .form-group label {
            font-weight: bold; /* Make labels bold */
        }

        .card-footer {
            text-align: right; /* Align button to the right */
            padding: 20px; /* Padding inside the footer */
        }

        .btn-primary {
            background-color: #007bff; /* Button background color */
            border: none;
            padding: 0.5rem 1rem; /* Button padding */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Button background color on hover */
            }

        .form-control {
            border-radius: 0.25rem; /* Input border radius */
        }

        .input-group {
            margin-bottom: 15px; /* Space between input fields */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Page Header -->
        <div class="page-header">
            <h1>@ViewData["Title"]</h1>
        </div>

        <!-- Main Content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Rasyon Bilgileri</h3>
                    </div>
                    <form asp-action="RasyonEkle" asp-controller="Rasyon" method="post">
                        <div class="card-body">
                            <!-- Form Fields -->
                            <div class="form-group">
                                <label for="CIFTLIKNO">Çiftlik No</label>
                                @Html.DropDownList("CIFTLIKNO", (List<SelectListItem>)ViewBag.ciftlik, new { @class = "form-control", id = "CIFTLIKNO" })
                            </div>

                            <div class="form-group">
                                <label for="URUNNO">Rasyon Ürün No</label>
                                @Html.DropDownList("URUNNO", (List<SelectListItem>)ViewBag.urun, new { @class = "form-control", id = "URUNNO" })
                            </div>

                            <div class="form-group">
                                <label for="MIKTAR">Miktar</label>
                                <input placeholder="Miktar" class="form-control" id="MIKTAR" name="MIKTAR" />
                            </div>

                            <div class="form-group">
                                <label for="ACIKLAMA">Açıklama</label>
                                <input placeholder="Açıklama" class="form-control" id="ACIKLAMA" name="ACIKLAMA" />
                            </div>

                            <!-- Optional Fields -->
                            @*
                            <div class="form-group">
                            <label for="EMTIANO">Emtia No</label>
                            @Html.DropDownList("EMTIANO", (List<SelectListItem>)ViewBag.emtia, new { @class = "form-control", id = "EMTIANO" })
                            </div>

                            <div class="form-group">
                            <label for="MIKTAREMTIA">Miktar Emtia</label>
                            <input placeholder="Miktar Emtia" class="form-control" id="MIKTAREMTIA" name="MIKTAREMTIA" />
                            </div>
                            *@
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Rasyon Ekle</button>
                        </div>
                    </form>
                </div>
            </div><!-- /.container-fluid -->
        </section>
    </div><!-- /.wrapper -->
</body>
</html>
