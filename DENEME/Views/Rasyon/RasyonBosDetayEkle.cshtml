@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<MoluEt.Models.Rasyon>

@{
    ViewData["Title"] = "Rasyon Detay Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    <!-- jQuery -->
   @*  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> *@
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>

    <style>
        .page-header {
            background-color: #343a40; /* Header background color */
            color: #fff; /* Text color */
            padding: 20px; /* Padding inside the header */
            margin-bottom: 20px; /* Bottom margin */
            margin-top: 40px; /* Margin at the top to push it down */
        }

            .page-header h1 {
                font-size: 1.75rem; /* Font size for the title */
                margin: 0; /* Remove margin */
            }

        .card {
            border-radius: 0.25rem; /* Card border radius */
        }

        .card-header {
            background-color: #343a40; /* Card header background color */
            color: #fff; /* Card header text color */
        }

        .card-title {
            font-size: 1.75rem; /* Font size for card title */
        }

        .btn-primary {
            font-size: 1.25rem; /* Font size for buttons */
            border-radius: 0.25rem; /* Button border radius */
        }

        .card-body {
            padding: 20px; /* Padding inside the card body */
        }

        .form-group label {
            font-weight: bold; /* Make labels bold */
        }

        .card-footer {
            text-align: right; /* Align button to the right */
            padding: 20px; /* Padding inside the footer */
        }

        .btn-primary {
            background-color: #007bff; /* Button background color */
            border: none;
            padding: 0.5rem 1rem; /* Button padding */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Button background color on hover */
            }

        .form-control {
            border-radius: 0.25rem; /* Input border radius */
        }

        .hidden {
            display: none;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Page Header -->
        <div class="page-header">
            <h1>@ViewData["Title"]</h1>
        </div>

        <!-- Main Content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Rasyon Detay Bilgileri</h3>
                    </div>
                    <form asp-action="RasyonBosDetayEkle" asp-route-id="@Model[0].URUNNO@Model[0].CIFTLIKNO" asp-controller="Rasyon" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label >Çiftlik No</label>
                                <input value="@Model[0].CIFTLIKNO - @Model[0].CIFTLIKADI" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label>Rasyon Ürünü</label>
                                <input value="@Model[0].URUNNO - @Model[0].URUNACIKLAMA" class="form-control" readonly />
                            </div>

                            <input name="CIFTLIKNO" value="@Model[0].CIFTLIKNO" class="hidden" />
                            <input name="URUNNO" value="@Model[0].URUNNO" class="hidden" />

                            <div class="form-group">
                                @Html.DropDownList("EMTIANO", (List<SelectListItem>)ViewBag.emtia, "Emtia Seçiniz", new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="MIKTAR">Miktar</label>
                                <input placeholder="Miktar" class="form-control" id="MIKTAR" name="MIKTAR" />
                            </div>
                        </div>
                        <input name="CIFTLIKNO" value=@Model[0].CIFTLIKNO hidden="hidden"/>
                        <input name="URUNNO" value=@Model[0].URUNNO hidden="hidden" />
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Rasyon Detay Ekle</button>
                        </div>
                    </form>
                </div>
            </div><!-- /.container-fluid -->
        </section>
    </div><!-- /.wrapper -->
</body>
</html>
